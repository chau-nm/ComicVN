<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.comicvn">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.ComicVN">

        <activity
            android:name=".ui.SplashActivity"
            android:exported="true">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />

                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.admin.view.AdminActivity"
            android:label="@string/activity_admin"
            android:exported="true" />

        <activity
            android:name=".ui.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.ComicVN.NoActionBar"></activity>

        <activity
            android:name=".ui.admin.add.AddComicActivity"
            android:label="@string/activity_add_comic"
            android:exported="true"></activity>
        <activity
            android:name=".ui.admin.view.AdminComicDetailActivity"
            android:label="@string/activity_comicdetail"
            android:exported="true" />
        <activity
            android:name=".ui.admin.edit.EditComicActivity"
            android:label="@string/activity_edit_comic"
            android:exported="true" />
        <activity
            android:name=".ui.admin.add.AddChapterActivity"
            android:label="@string/activity_add_chapter"
            android:exported="true" />
        <activity
            android:name=".ui.comicdetail.ComicDetailActivity"
            android:label="@string/activity_comicdetail"
            android:exported="true" />
        <activity
            android:name=".ui.readcomic.ReadComicActivity"
            android:exported="true" />
        <activity
            android:name=".ui.register.RegisterActivity"
            android:label="@string/activity_register"
            android:exported="true">
        </activity>
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/activity_login"
            android:exported="true"></activity>
        <activity
            android:name=".ui.search.SearchActivity"
            android:exported="true" />
        <activity
            android:name=".ui.category.ChoseCategoryActivity"
            android:label="@string/activity_chose_category"
            android:exported="true" />
    </application>

</manifest>